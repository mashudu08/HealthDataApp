@model IEnumerable<HealthDataApp.Models.HealthData>

@{
    ViewData["Title"] = "Health Data";
}

<h1>Health Data</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeartRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodPressure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeartRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodPressure)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HealthDataId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HealthDataId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HealthDataId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
